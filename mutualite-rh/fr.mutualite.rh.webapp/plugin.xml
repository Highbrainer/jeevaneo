<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.equinox.http.registry.servlets">
      <servlet
            alias="/cdo-init"
            class="fr.mutualite.rh.webapp.CdoServlet"
            load-on-startup="true">
      </servlet>
      <servlet
            alias="/rest/*"
            class="org.glassfish.jersey.servlet.ServletContainer"
            load-on-startup="true">
         <init-param
               name="jersey.config.server.provider.classnames"
               value="fr.mutualite.rh.webapp.ExceptionMapper,fr.mutualite.rh.webapp.admin.AdminResource,fr.mutualite.rh.webapp.LoaderResource,fr.mutualite.rh.webapp.EntretienResource,fr.mutualite.rh.webapp.EntretienAnnuelResource,fr.mutualite.rh.webapp.EntretienProfessionnelResource,fr.mutualite.rh.webapp.ReportResource,fr.mutualite.rh.webapp.EtablissementResource,fr.mutualite.rh.webapp.EmployeResource,fr.mutualite.rh.webapp.security.AuthenticationEndpoint,fr.mutualite.rh.webapp.security.AuthenticationFilter,fr.mutualite.rh.webapp.security.AuthorizationFilter,fr.mutualite.rh.webapp.security.AuthenticatedUserProducer">
         </init-param>
      </servlet>
   </extension>
   <extension
         point="org.eclipse.equinox.http.registry.resources">
      <resource
            alias="/files"
            base-name="/resources">
      </resource>
   </extension>
   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application
            cardinality="singleton-global"
            thread="main"
            visible="true">
         <run
               class="fr.mutualite.rh.webapp.Application">
         </run>
      </application>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.eclipse.ui.ide.workbench"
            name="Mutualité RH - Gestion Informatisée des Compétences">
         <property
               name="appName"
               value="Mutualité RH - Gestion Informatisée des Compétences">
         </property>
      </product>
   </extension>
</plugin>
